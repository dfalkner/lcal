  <dd><%= @principal.start_of_ordinary_time_after_easter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starting_week_of_ordinary_time_after_easter) %>:</strong></dt>
  <dd><%= @principal.starting_week_of_ordinary_time_after_easter %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              principals_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_principal_path(@principal), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              principal_path(@principal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
