  <dt><strong><%= model_class.human_attribute_name(:first_sunday_of_advent) %>:</strong></dt>
  <dd><%= @principal.first_sunday_of_advent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_of_ordinary_time_before_lent) %>:</strong></dt>
  <dd><%= @principal.start_of_ordinary_time_before_lent %></dd>
