  <dd><%= @principal.dominical_year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:epiphany) %>:</strong></dt>
  <dd><%= @principal.epiphany %></dd>
  <dt><strong><%= model_class.human_attribute_name(:baptism_of_the_lord) %>:</strong></dt>
  <dd><%= @principal.baptism_of_the_lord %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ash_wednesday) %>:</strong></dt>
  <dd><%= @principal.ash_wednesday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:easter) %>:</strong></dt>
  <dd><%= @principal.easter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ascension) %>:</strong></dt>
  <dd><%= @principal.ascension %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ascension_sunday) %>:</strong></dt>
  <dd><%= @principal.ascension_sunday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pentecost) %>:</strong></dt>
  <dd><%= @principal.pentecost %></dd>
  <dt><strong><%= model_class.human_attribute_name(:holy_trinity) %>:</strong></dt>
  <dd><%= @principal.holy_trinity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:corpus_christi) %>:</strong></dt>
  <dd><%= @principal.corpus_christi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sacred_heart) %>:</strong></dt>
  <dd><%= @principal.sacred_heart %></dd>
  <dt><strong><%= model_class.human_attribute_name(:immaculate_heart) %>:</strong></dt>
