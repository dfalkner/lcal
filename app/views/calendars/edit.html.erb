<%- model_class = Calendar -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                 :default => "Edit #{model_class.model_name.human}") %></h1>
</div>
<%= simple_form_for(@calendar, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <%= f.association :ordo%> 
  <%= f.input :data, :label => 'Date', :input_html => { :class => "span2" } %>
  <%= f.association :rank %>
  <%= f.association :season %>
  <%= f.association :color, :as => :radio_buttons,  :item_wrapper_class => 'inline'  %>
  <%= f.input :week_in_season, :collection => 0..54, :input_html => { :class => "span1" }  %> 
  <%= f.association :day_of_week %>
  <%= f.input :title, :input_html => { :class => "span9" } %>

  <%= link_to "Back", :back, :class => 'btn' %>
  <%= f.button :submit, 'Update', :class => 'btn-primary' %>

<% end %>

