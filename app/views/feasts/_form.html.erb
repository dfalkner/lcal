<%= simple_form_for @feast, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.error_notification %>
<div class="control-group">
  <%= f.label :title, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :title, :class => 'text_field'  %>
  </div>
</div>
  <div class="control-group">
    <%= f.label :ordo_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :ordo_id, Ordo.all, :id, :title %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :month, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :month, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :day, :class => 'number_field'  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :rank_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :rank_id, Rank.all, :id, :title  %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :color_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :color_id, Color.all, :id, :title %>
    </div>
  </div>
  <div class="control-group">
	<%= f.association :commons %>
   </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                feasts_path, :class => 'btn' %>
  </div>




<% end %>


