<%- model_class = Feast -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:ordo_id) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:rank_id) %></th>
      <th><%= model_class.human_attribute_name(:color_id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <% if user_signed_in? %><% if current_user.has_role? :editor %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %><% end %>
    </tr>
  </thead>
  <tbody>
    <% @feasts.each do |f| %>
      
      <tr>
        <td><%= link_to f.id, feast_path(f) %></td>
        <td><%= f.ordo %></td>
        <td><%= f.month %>/<%= f.day %></td>
        <td><%= f.rank %></td>
        <td><%= f.color %></td>
        <td><%= f.title %></td>
        <% if user_signed_in? %><% if current_user.has_role? :editor %>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_feast_path(f), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      feast_path(f),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
        <% end %><% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_feast_path,
            :class => 'btn btn-primary' %>