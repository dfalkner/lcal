<%- model_class = RomanCalendar -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:feast_day) %></th>
      <th><%= model_class.human_attribute_name(:rank_id) %></th>
      <th><%= model_class.human_attribute_name(:color) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @roman_calendars.each do |roman_calendar| %>
      <tr>
        <td><%= link_to roman_calendar.id, roman_calendar_path(roman_calendar) %></td>
        <td><%= roman_calendar.feast_day %></td>
        <td><%= roman_calendar.rank_id %></td>
        <td><%= roman_calendar.color %></td>
        <td><%= roman_calendar.description %></td>
        <td><%=l roman_calendar.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_roman_calendar_path(roman_calendar), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      roman_calendar_path(roman_calendar),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_roman_calendar_path,
            :class => 'btn btn-primary' %>
